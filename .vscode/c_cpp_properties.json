{
    "version": 4,
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/*",
                "${workspaceFolder}/include/*"
            ],
            "defines": [
                "ANSI",
                "_ANSI"
            ],
            "compilerArgs": [
                "-fexec-charset=GBK",
                "-std=gnu++26",
                "-Wall",
                "-Wextra",
                "-Weffc++",
                "-pipe",
                "-static",
                "-O3",
                "-flto=auto",
                "-fno-rtti"
            ],
            "intelliSenseMode": "windows-gcc-x64",
            "cStandard": "gnu23",
            "cppStandard": "gnu++23",
            "mergeConfigurations": false,
            "configurationProvider": "ms-vscode.makefile-tools"
        }
    ]
}